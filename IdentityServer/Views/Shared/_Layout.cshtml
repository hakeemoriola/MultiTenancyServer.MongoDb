@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] INFUSYNC&trade; | Login</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="apple-touch-icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Bootstrap core CSS -->
    <link href="~/css/materialize.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/css/materialize.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body class="theme">
        <div class="container-fluid">
            @RenderBody()
        </div>

            <div class="footer-copyright">
                <div class="foot-adjust">
                    <h6 class="infusync-grey cp-footer">
                        Copyright © @DateTime.Now.Year.ToString() Infusync. All rights
                        reserved. This service is Infusync confidential and proprietary for use by authorized
                        clients.
                    </h6>
                </div>
            </div>
   
    <script type="text/javascript" src="~/js/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="~/js/materialize.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/js/materialize.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
